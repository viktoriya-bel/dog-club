@model dog_club.Models.User

@{
    Layout = "_Layout";
}


<h2>Вход на сайт</h2>

<form method="post" asp-anti-forgery="true" asp-action="Login" asp-controller="Auth">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label asp-for="userName" class="form-label">Введите Логин</label>
        <input type="text" name="userName" asp-for="userName" class="form-control" required>
    </div>
    <div class="mb-3">
        <label asp-for="password" for="password" class="form-label">Введите пароль</label>
        <input asp-for="password" type="password" name="password" class="form-control" id="password" required>
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
