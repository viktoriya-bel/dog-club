@using dog_club.Models
@model IEnumerable<Group>

@{
    Layout = "_Layout";
    @Html.Partial("_menuProfile")
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Наименование группы (Классификация)</th>
            <th scope="col"></th>
            <th scope="col"><button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "Groups")'"><i class="fas fa-plus-circle" title="Добавить запись"></i></button></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var group in Model)
            {
                <tr>
                    <th scope="row">@group.id</th>
                    <td>@group.nameGroup</td>
                    <td>
                        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Edit", "Groups", new { id = group.id })'">
                            <i class="fas fa-pencil-alt text-primary" title="Редактировать запись"></i>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Delete", "Groups", new { id = group.id })'">
                            <i class="fas fa-trash-alt text-danger" title="Удалить запись"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>