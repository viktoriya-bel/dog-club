@using dog_club.Models
@model IEnumerable<Role>

@{
    Layout = "_Layout";
    @Html.Partial("_menuProfile")
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Наименование роли</th>
            <th scope="col">Права администратора</th>
            <th scope="col"></th>
            <th scope="col"><button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Create", "Roles")'"><i class="fas fa-plus-circle" title="Добавить запись"></i></button></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var role in Model)
            {
                <tr>
                    <th scope="row">@role.id</th>
                    <td>@role.name</td>
                    <td>@role.isAdmin</td>
                    <td>
                        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Edit", "Roles", new { id = role.id })'">
                            <i class="fas fa-pencil-alt text-primary" title="Редактировать запись"></i>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-light" onclick="location.href='@Url.Action("Delete", "Roles", new { id = role.id })'" disabled="@role.isAdmin">
                            <i class="fas fa-trash-alt text-danger" title="Удалить запись"></i>
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>