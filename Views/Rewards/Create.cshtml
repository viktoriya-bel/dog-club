@using dog_club.Models
@model IEnumerable<Dog>

@{
    Layout = "_Layout";
    @Html.Partial("_menuProfile")
}
<h2>Добавление награды</h2>
<form method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label asp-for="name" class="form-label">Наименование</label>
        <input type="text" name="name" asp-for="name" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="date" class="form-label">Дата получения</label>
        <input type="date" name="date" asp-for="date" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="DogId" class="form-label">Собака</label>
        <select class="form-select" name="DogId" required>
            @{
                foreach (Dog dog in Model)
                {
                        <option value="@dog.id">@dog.name (@dog.id)</option>
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>