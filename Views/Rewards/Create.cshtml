@model dog_club.Models.Reward

@{
    Layout = "_Layout";
    @Html.Partial("_menuProfile")
}
<h2>Добавление награды</h2>
<form method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>

    <div class="mb-3">
        <label asp-for="name" class="form-label">Наименование</label>
        <input type="text" name="name" asp-for="name" class="form-control" required>
    </div>

    <div class="mb-3">
        <label asp-for="date" class="form-label">Дата получения</label>
        <input type="date" name="date" asp-for="date" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Добавить</button>
</form>