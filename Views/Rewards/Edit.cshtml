@using dog_club.Models
@model RewardEdit

@{
    Layout = "_Layout";
    @Html.Partial("_menuProfile")
}
<h2>Редактирование</h2>
<form method="post">

    <div class="mb-3">
        <label asp-for="id" class="form-label">ID</label>
        <input type="number" name="id" asp-for="id" class="form-control" value="@Model.id" disabled>
    </div>

    <div class="mb-3">
        <label asp-for="name" class="form-label">Наименование</label>
        <input type="text" name="name" asp-for="name" class="form-control" value="@Model.name" required>
    </div>

    <div class="mb-3">
        <label asp-for="date" class="form-label">Дата получения</label>
        <input type="date" name="date" asp-for="date" class="form-control" value="@Model.date" required>
    </div>

    <div class="mb-3">
        <label asp-for="DogId" class="form-label">Собака</label>
        <select class="form-select" name="DogId" required>
            @{
                foreach (Dog dog in Model.Dogs)
                {
                    if (dog.id == Model.DogId)
                    {
                        <option value="@dog.id" selected>@dog.name (@dog.id)</option>
                    }
                    else
                    {
                        <option value="@dog.id">@dog.name (@dog.id)</option>
                    }
                }
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Изменить</button>
</form>